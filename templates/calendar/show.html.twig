{% extends 'base.html.twig' %}

{% block title %}Rendez-vous{% endblock %}

{% block body %}
    <div class="showItem">
        <div class="showContainer">
            <div class="title rdv">
                <img src="{{ asset('build/img/Calendar_Two_Color') }}">
                <h1>Rendez-vous</h1>
            </div>
            <table class="table">
                <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ calendar.title }}</td>
                </tr>
                <tr>
                    <th>DÃ©but</th>
                    <td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Fin</th>
                    <td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Organisateur</th>
                    <td>{{ calendar.createdBy.firstName }} {{ calendar.createdBy.lastName }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ calendar.description }}</td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center mb-3">
                <a href="{{ path('calendar_index') }}" class="btn btn-outline-info">Liste des rendez-vous</a>
            </div>
            <div class="d-flex justify-content-center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}" class="btn btn-outline-success mr-2">Edtier</a>

                    {{ include('calendar/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
