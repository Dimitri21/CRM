{% extends 'base.html.twig' %}

{% block title %}Editer{% endblock %}

{% block body %}
    <div class="forms">
        <div class="formContainer">
            <h1>Modifier votre rendez-vous</h1>
            <div class="formContainerFields">
                {{ include('calendar/_form.html.twig', {'button_label': 'Editer'}) }}

            </div>
            <div class="d-flex justify-content-center mt-4">
                <a href="{{ path('calendar_index') }}" class="btn btn-outline-info mr-2">Retour à la liste</a>

                {{ include('calendar/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.userPicker').select2({
                placeholder: 'Selectionnez les membres invités',
            });
        })
    </script>
{% endblock %}