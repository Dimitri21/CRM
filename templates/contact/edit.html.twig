
{% extends 'base.html.twig' %}

{% block title %}Editer{% endblock %}

{% block body %}
<div class="forms">
    <div class="formContainer">
        <h1>Editer un contact</h1>
            <div class="formContainerFields">
                {{ include('contact/_form.html.twig', {'button_label': 'Valider'}) }}
            </div>
        <div class="d-flex justify-content-center mt-4">
            <a href="{{ path('contact_index') }}"  class="btn btn-outline-info mr-2">Liste des contacts</a>
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('contact/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
