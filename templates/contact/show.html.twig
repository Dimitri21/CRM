{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="showItem">
    <div class="showContainer">
        <div class="title contact">
            <img src="{{ asset('build/img/User_Profile.png') }}">
            <h1>Contact</h1>
        </div>
        <table class="table">
            <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.firstName }} </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.lastName }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ contact.address }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ contact.description }}</td>
            </tr>
            </tbody>
        </table>

        <div class="showBottomAction">
            <a href="{{ path('contact_index') }}">Retourner à la liste</a>

            <a href="{{ path('contact_edit', {'id': contact.id}) }}">Editer</a>

            {{ include('contact/_delete_form.html.twig') }}
        </div>
    </div>
</div>

{% endblock %}
