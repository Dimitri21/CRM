{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}

    <div class="container">
        <div class="row index">
            <div class="col">
                <div class="title">
                    <img src="{{ asset('build/img/User_Profile.png') }}">
                    <h1>Vos contacts</h1>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Téléphone</th>
                        <th>Email</th>
                        <th>Adresse</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.firstName }}</td>
                            <td>{{ contact.lastName }}</td>
                            <td>{{ contact.phone }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.address }}</td>
                            <td>{{ contact.description }}</td>
                            <td>
                                <a href="{{ path('contact_show', {'id': contact.id}) }}">Voir</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">Editer</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun résultat</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
